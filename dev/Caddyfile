azubitafel.local azubitafel.this {
    # API routes
    handle_path /api/* {
        reverse_proxy api:1920
    }

    # Everything else: static + SPA fallback
    handle {
        @notAPI {
            not path /api/*
        }

        handle @notAPI {
            root * /www
            try_files {path} /
            file_server
        }
    }

#    tls internal
    tls /config/tls/service.crt /config/tls/service.key

    @http3 {
        protocol h3
    }
}